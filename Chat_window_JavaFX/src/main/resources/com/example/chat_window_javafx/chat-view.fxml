<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<VBox fx:id="VBOX" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.chat_window_javafx.ChatWindowController" >
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>


    <TextArea fx:id="chatTextArea" VBox.vgrow="ALWAYS" editable="false"/>

    <Button fx:id="SendButton" text="Отправить" nodeOrientation="RIGHT_TO_LEFT" onAction="#onSendClick" />

    <TextField fx:id="SendText" promptText="Введите текст вашего сообщения" onAction="#onSendClick"  />
</VBox>
