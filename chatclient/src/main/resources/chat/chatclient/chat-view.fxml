<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>


<VBox fx:id="VBOX" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="chat.chatclient.ChatWindowController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Button fx:id="ConnectButton" text="Подсоединиться к серверу" onAction="#onConnectClick"/>

    <HBox  alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="10" bottom="1" left="5" right="5"/>
        </padding>
        <TextArea fx:id="chatTextArea" VBox.vgrow="ALWAYS" editable="false" prefWidth="400"/>
        <TextArea fx:id="clientsTextArea" VBox.vgrow="ALWAYS" editable="false" prefWidth = "150" text="Сейчас в чате:"/>
    </HBox>

    <HBox  alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="10" bottom="1" left="5" right="5"/>
        </padding>


        <TextField fx:id="SendText" nodeOrientation="LEFT_TO_RIGHT" prefColumnCount="35"
                   promptText="Введите текст вашего сообщения "
                   onAction="#onSendClick" visible="false"/>
        <Button fx:id="SendButton" text="Отправить" onAction="#onSendClick" visible="false"/>
    </HBox>
</VBox>